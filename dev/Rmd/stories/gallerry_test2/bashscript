#!/bin/bash  # Set the destination directory name dest_dir="renamed_images"  # Create the destination directory if it doesn't exist if [ ! -d "$dest_dir" ]; then   mkdir "$dest_dir" fi  # Change to the source directory cd "$(dirname "$0")"  # Initialize a counter variable count=1  # Loop through each file in the source directory for file in *; do   # Check if the file is an image file   if [[ $file == *.jpg || $file == *.jpeg || $file == *.png || $file == *.gif ]]; then     # Create the new file name     new_file_name="Fig$count${file##*.}"      # Copy the file to the destination directory with the new name     cp "$file" "$dest_dir/$new_file_name"      # Increment the counter     ((count++))   fi done  # Print a message indicating the script has finished echo "Finished copying and renaming files."
